{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": [2, 2],
    "comma-dangle": ["error", "never"],
    "no-plusplus": 0,
    "func-names": 0,
    "arrow-body-style": ["warn", "as-needed"],
    "no-param-reassign": 0,
    "space-before-function-paren": 0,
    "no-console": "warn"
  },
  "plugins": [
    "jsx-a11y",
    "import"
  ]
}
